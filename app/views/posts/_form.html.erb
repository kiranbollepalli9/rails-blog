<div class="container">

    <div class="row justify-content-md-center">
      <div class="col-8">    
        <%= render 'shared/errors' , obj: @post%>
        <%= form_with( model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
          <div class="form-group row">
              <%= form.label :title, class:"col-sm-2 col-form-label text-light" %><br>
              <div class="col-sm-10">
                <%= form.text_field :title, class:"form-control shadow rounded", placeholder: "Title of the Blog"%>
              </div>
          </div>

          <div class="form-group row">
            <%= form.label :Description, class:"col-sm-2 col-form-label text-light" %><br>
            <div class="col-sm-10">
              <%= form.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of the Blog"%>
            </div>
          </div>

          <div class="form-group row justify-content-center">
              <%= form.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
        <div class= "mb-4 text-center">
          <%= link_to '[Cancel and return to articles listing]', posts_path%> 
        </div>
      </div>
    </div>
  </div>
